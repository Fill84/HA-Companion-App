{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Home Assistant Companion",
    "version": "1.0.0",
    "identifier": "com.ha-companion.desktop",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "yarn run dev:server",
        "beforeBuildCommand": ""
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Home Assistant Companion",
                "width": 1280,
                "height": 800,
                "visible": false,
                "resizable": true,
                "fullscreen": false,
                "decorations": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2.png",
            "icons/512x512.png",
            "icons/icon.ico"
        ],
        "windows": {
            "webviewInstallMode": {
                "type": "downloadBootstrapper"
            },
            "nsis": {
                "installMode": "both"
            }
        }
    },
    "plugins": {
        "autostart": null
    }
}